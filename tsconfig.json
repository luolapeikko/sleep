{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "es2017",
		"lib": ["es2017", "dom"],
		"rootDir": "./src",
		"outDir": "./dist",
		"moduleResolution": "NodeNext",
		"sourceRoot": "./src",
		"types": ["node"],
		"strict": true,
		"declaration": true,
		"removeComments": false,
		"inlineSources": false,
		"inlineSourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"importHelpers": false,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src/"],
	"exclude": ["test/", "dist/", "node_modules/"],
	"ts-node": {
		"esm": true
	}
}
