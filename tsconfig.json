{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "es2022",
		"lib": ["es2022", "dom"],
		"rootDir": "./",
		"outDir": "./dist",
		"moduleResolution": "NodeNext",
		"sourceRoot": "./src",
		"types": ["node"],
		"strict": true,
		"declaration": true,
		"removeComments": false,
		"inlineSources": false,
		"inlineSourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"importHelpers": false,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["test/", "src/"],
	"exclude": ["dist/", "node_modules/"]
}
